<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- Spring 프레임워크 라이브러리의 InternalResourceViewResolver 클래스를 Spring Bean으로 등록 -->
	<!-- ▶ InternalResourceViewResolver 객체: 뷰의 이름(viewName)을 전달받아 응답 처리할 JSP 문서의 경로로 변환하여 반환하는 기능을 제공해주는 객체 -->
	<!-- ▶ prefix 필드와 suffix 필드에 JSP 문서 경로를 생성하기 값을 전달 -->
	<bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<!-- prefix 필드: 뷰의 이름 앞부분에 추가될 문자열을 저장 - 폴더 -->
		<property name="prefix" value="/WEB-INF/mvc/" />
		<!-- suffix 필드: 뷰의 이름 뒷부분에 추가될 문자열을 저장 - 확장자 -->
		<property name="suffix" value=".jsp" />
	</bean>

	<!-- 여기다가 만들어도 됨! -->
</beans>
